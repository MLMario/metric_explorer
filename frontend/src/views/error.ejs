<%- include('layout', { body: `
<div class="card" style="max-width: 600px; margin: 0 auto; text-align: center;">
  <h2>Something went wrong</h2>
  <p class="text-muted">${typeof message !== 'undefined' ? message : 'An unexpected error occurred'}</p>

  ${typeof error !== 'undefined' && error.stack ? `
  <details style="text-align: left; margin-top: 1rem;">
    <summary>Error details</summary>
    <pre style="overflow: auto; font-size: 0.875rem;">${error.stack}</pre>
  </details>
  ` : ''}

  <div style="margin-top: 2rem;">
    <a href="/" class="btn btn-primary">Start New Investigation</a>
  </div>
</div>
` }) %>
